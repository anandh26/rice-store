.breadcrumb-container
  .container
    %ol.breadcrumb
      %li
        %i.fa.fa-home.pr-10
        %a{:href => root_path} Home
      %li.active
        %a{:href => shop_products_category_path(category: params[:category])}
          =params[:category]
      %li.active
        %a{:href => shop_products_category_path(category: params[:category])}
          =params[:sub_category]
%section.main-container
  .container
    .row
      .main.col-md-8.col-lg-offset-1.col-md-push-4.col-lg-push-3
        %h1.page-title Our Products
        .separator-2
        %ul.nav.nav-pills{:role => "tablist"}
          -@products.each do |category_title, prods|
            %li
              %a{"data-toggle" => "tab", :href => "#pill-#{category_title}", :role => "tab", :title => category_title}
                %i.icon-star
                = category_title
        .tab-content.clear-style
          -@products.each do |category_title, prods|
            %div.tab-pane.active{id: "pill-#{category_title}"}
              =render 'prods_tab', prods: prods, category_title: category_title

      %aside.col-md-4.col-lg-3.col-md-pull-8.col-lg-pull-9
        .sidebar
          .block.clearfix
            %h3.title Categories
            .separator-2
            %nav
              %ul.nav.nav-pills.nav-stacked
                -Category.all.each do |cat|
                  %li
                    =link_to cat.name, shop_products_category_path(category: cat.name.downcase)
                %li
                  %a{:href => "blog-large-image-right-sidebar.html"} Blog
                %li
                  %a{:href => "portfolio-grid-2-3-col.html"} Portfolio
                %li
                  %a{:href => "page-about.html"} About
                %li
                  %a{:href => "page-contact.html"} Contact
          .block.clearfix
            %h3.title Featured Products
            .separator-2
            .owl-carousel.content-slider-with-controls-autoplay.owl-theme{:style => "opacity: 1; display: block;"}
              -5.times do |f|
                .overlay-container.overlay-visible
                  %img{:alt => "", :src => asset_path("rice_home_slider.jpg")}
                    .overlay-bottom.hidden-xs
                      .text
                        %h3.title Caption Title
                        %p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laborum optio odio, recusandae qui minima eveniet cumque praesentium expedita sint accusamus itaque.
                    %a.popup-img.overlay-link{:href => "images/portfolio-2.jpg", :title => "image title"}
                      %i.icon-plus-1
