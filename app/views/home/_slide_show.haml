.banner.clearfix
  .slideshow
    .slider-banner-container
      .slider-banner-fullwidth-big-height
        %ul.slides
          / slide 1 start
          / ================
          %li{"data-masterspeed" => "500", "data-saveperformance" => "on", "data-slotamount" => "7", "data-title" => "Wellcome", "data-transition" => "random"}
            / main image
            %img{:alt => "slidebg1", "data-bgfit" => "cover", "data-bgposition" => "center top",
            "data-bgrepeat" => "no-repeat", :src => asset_path("rice_home_slider_1.jpg")}
              / Transparent Background
              .tp-caption.light-translucent-bg{"data-speed" => "600", "data-start" => "0", "data-x" => "center", "data-y" => "bottom"}
              / LAYER NR. 1
              .tp-caption.sfb.fadeout.large_dark{"data-easing" => "easeOutQuad", "data-speed" => "500", "data-start" => "1000", "data-x" => "left", "data-y" => "180"}
                Compassionate care
              / LAYER NR. 2
              .tp-caption.sfb.fadeout.medium_dark.hidden-xs{"data-easing" => "easeOutQuad", "data-endspeed" => "600", "data-speed" => "500", "data-start" => "1300", "data-x" => "left", "data-y" => "250"}
                Une solution simple pour prendre rendez vous en simple clique.
                %br
                  Une agenda haute gamme pour facilitier votre vie.
              / LAYER NR. 3
              .tp-caption.sfb.fadeout.small_dark.text-center{"data-easing" => "easeOutQuad", "data-endspeed" => "600", "data-speed" => "500", "data-start" => "1600", "data-x" => "left", "data-y" => "360"}
                %a.btn.btn-dark.btn-default.btn-animated{:href => "#"}
                  Learn More
                  %i.fa.fa-arrow-right
          / slide 1 end
          / slide 2 start
          / ================
          %li{"data-masterspeed" => "500", "data-saveperformance" => "on", "data-slotamount" => "7", "data-title" => "Top Doctors", "data-transition" => "random"}
            / main image
            %img{:alt => "slidebg2", "data-bgfit" => "cover", "data-bgposition" => "center top", "data-bgrepeat" => "no-repeat", :src => asset_path("rice_home_slider.jpg")}
              / Transparent Background
              .tp-caption.dark-translucent-bg{"data-speed" => "600", "data-start" => "0", "data-x" => "center", "data-y" => "bottom"}
              / LAYER NR. 1
              .tp-caption.sfb.fadeout.text-right.large_white{"data-easing" => "easeOutQuad", "data-speed" => "500", "data-start" => "1000", "data-x" => "right", "data-y" => "180"}
                Top doctors providing quality care
              / LAYER NR. 2
              .tp-caption.sfb.fadeout.text-right.large_white.tp-resizeme.hidden-xs{"data-easing" => "easeOutQuad", "data-speed" => "500", "data-start" => "1300", "data-x" => "right", "data-y" => "250"}
                .separator-3.light
              / LAYER NR. 3
              .tp-caption.sfb.fadeout.medium_white.text-right.hidden-xs{"data-easing" => "easeOutQuad", "data-endspeed" => "600", "data-speed" => "500", "data-start" => "1300", "data-x" => "right", "data-y" => "270"}
                Une solution simple pour prendre rendez vous en simple clique.
                %br
                  Une agenda haute gamme pour facilitier votre vie,
                  %br
              / LAYER NR. 4
              .tp-caption.sfb.fadeout.small_white.text-right{"data-easing" => "easeOutQuad", "data-endspeed" => "600", "data-speed" => "500", "data-start" => "1600", "data-x" => "right", "data-y" => "380"}
                %a.btn.btn-dark.btn-default.btn-animated{:href => "#"}
                  Learn More
                  %i.fa.fa-arrow-right
        / slide 2 end
        .tp-bannertimer
