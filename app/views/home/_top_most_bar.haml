      .col-xs-9.col-sm-6.col-md-3
        #header-top-second.clearfix
          .header-top-dropdown.text-right
            -if session[:user].present?
              Welcome
              %span.text-bold= session[:user]['user_name']
              .btn-group
                %a.btn.btn-default.btn-sm{:href => logout_path}
                  %i.fa.fa-user.pr-10
                  Sign Out
            -else
              .btn-group
                %a.btn.btn-default.btn-sm{:href => user_register_path}
                  %i.fa.fa-user.pr-10
                  Sign Up
              .btn-group.dropdown
                %button.btn.dropdown-toggle.btn-default.btn-sm{"data-toggle" => "dropdown", :type => "button"}
                  %i.fa.fa-lock.pr-10
                  Login
                %ul.dropdown-menu.dropdown-menu-right.dropdown-animation
                  %li
                    %form.login-form.margin-clear
                      .form-group.has-feedback
                        %label.control-label Username
                        %input.form-control{:placeholder => "", :type => "text"}
                          %i.fa.fa-user.form-control-feedback
                      .form-group.has-feedback
                        %label.control-label Password
                        %input.form-control{:placeholder => "", :type => "password"}
                          %i.fa.fa-lock.form-control-feedback
                      %button.btn.btn-primary.btn-sm{:type => "submit"} Log In
                      %span.pl-5.pr-5 or
                      %button.btn.btn-primary.btn-sm{:type => "submit"} Sign Up
                      %ul
                        %li
                          %a{:href => "#"} Forgot your password?
                      %span.text-center Login with
                      %ul.social-links.circle.small.colored.clearfix
                        %li.facebook
                          %a{:href => "http://www.facebook.com", :target => "_blank"}
                            %i.fa.fa-facebook
                        %li.twitter
